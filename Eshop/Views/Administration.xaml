<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eshop.Views.Administration"
             Title="Espace Admin">
  
    <ContentPage.Content>
        <StackLayout >
            <Button Margin="10" TextColor="{StaticResource Primary}" BackgroundColor="#eee" HeightRequest="100" FontAttributes="Bold" FontSize="20" Text="Gestion produits" Clicked="Button_produits_Clicked" />
            <Button Margin="10" TextColor="{StaticResource Primary}" BackgroundColor="#eee" HeightRequest="100" FontAttributes="Bold" FontSize="20" Text="Gestion categories" Clicked="Button_categories_Clicked" />
            <Button Margin="10" TextColor="{StaticResource Primary}" BackgroundColor="#eee" HeightRequest="100" FontAttributes="Bold" FontSize="20" Text="Gestion commande" Clicked="Button_commande_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>