<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eshop.Views.ModifierProduit">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label  TextColor="{StaticResource Primary}"  HorizontalTextAlignment="Center" FontSize="30" Margin="20">Modifier Produit</Label>
            <Entry Placeholder="Nom" TextColor="Black"  PlaceholderColor="Black"  x:Name="productNameEntry" />
            <Entry Placeholder="Description" TextColor="Black" PlaceholderColor="Black" x:Name="descriptionEntry" />
            <Entry Placeholder="Prix" TextColor="Black" PlaceholderColor="Black" x:Name="priceEntry" Keyboard="Numeric" />
            <Picker Title="Select Categorie" TextColor="Black" x:Name="categoryPicker" TitleColor="Black"/>
            <Image x:Name="productImage" Aspect="AspectFill" HeightRequest="100" Margin="0,10,0,0" />
            <Button Text="Select Image" Clicked="SelectImage_Clicked" />


            <Button Text="Enregistrer" x:Name="Add_btn" Clicked="Update_btn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>